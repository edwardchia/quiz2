<h1>this is the index page</h1>

<div class="container-fluid index-box">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="card-deck col-lg-4 col-md-6 col-sm-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-primary"><%= link_to post.title, post_path(post.id) %></h5>
            <p class="card-text"><%= post.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>